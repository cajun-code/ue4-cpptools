{
    "name": "ue4-cpptools",
    "displayName": "ue4-cpptools",
    "description": "VSCode Tools for working with Unreal Engine 4 C++ projects",
    "version": "0.0.4",
    "preview" : true,
    "publisher": "christopherreed",
    "repository": {
        "type": "git",
        "url": "https://github.com/christopherreed/ue4-cpptools"
    },
    "bugs" : {
        "url" : "https://github.com/christopherreed/ue4-cpptools/issues"
    },
    "license": "MIT",
    "readme" : "README.md",
    "engines": {
        "vscode": "^1.14.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:ue4-cpptools.generateCppToolsConfiguration",
        "onCommand:ue4-cpptools.generateProjectFiles",
        "onCommand:ue4-cpptools.buildProject",
        "onCommand:ue4-cpptools.openTerminal",
        "onCommand:ue4-cpptools.openProjectWithEditor",
        "onCommand:ue4-cpptools.runProjectWithEditor",
        "onCommand:ue4-cpptools.searchOnlineDocumentation"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "command": "ue4-cpptools.generateCppToolsConfiguration",
                "title": "Generate CppTools Configuration",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.generateProjectFiles",
                "title": "Generate Project Files",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.buildProject",
                "title": "Build Project",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.openTerminal",
                "title": "Open Terminal",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.openProjectWithEditor",
                "title": "Open Project With Unreal Editor",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.runProjectWithEditor",
                "title": "Run Project With Unreal Editor",
                "category": "UE4 Tools"
            },
            {
                "command": "ue4-cpptools.searchOnlineDocumentation",
                "title": "Search Unreal Engine Online Documenation",
                "category": "UE4 Tools"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "UE4 CppTools Configuration",
            "properties": {
                "ue4-cpptools.engineRootPath": {
                    "type": "string",
                    "description": "Path to Unreal Engine root directory"
                },
                "ue4-cpptools.cppToolsConfiguration": {
                    "type": "string",
                    "description": "Name of CppTools configuration to generate"
                },
                "ue4-cpptools.recycleTerminal": {
                    "enum": [
                        "Always",
                        "Command",
                        "Never"
                    ],
                    "description": "Controls terminal reuse for the extension"
                },
                "ue4-cpptools.overrideUnrealBuildTool": {
                    "type": "string",
                    "description": "Override the command to run Unreal Build Tool"
                },
                "ue4-cpptools.buildConfiguration": {
                    "enum": [
                        "Development",
                        "DebugGame",
                        "Debug",
                        "Shipping",
                        "Test"
                    ],
                    "description" : "Unreal Build Tool build configuration"
                },
                "ue4-cpptools.buildConfigurationTarget": {
                    "enum": [
                        "Editor",
                        "Game",
                        "Client",
                        "Server"
                    ],
                    "description" : "Unreal Build Tool build configuration target"
                },
                "ue4-cpptools.buildPlatform": {
                    "enum": [
                        "Linux",
                        "Win64",
                        "Mac"
                    ],
                    "description" : "Unreal Build Tool build platform"
                },
                "ue4-cpptools.overrideUnrealEditor": {
                    "type": "string",
                    "description": "Override the command to run Unreal Editor"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
